<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView android:id="@+id/card"
            android:layout_width="@dimen/custom_button_size_medium_width"
            android:layout_height="@dimen/custom_button_size_medium_height"
            app:cardCornerRadius="@dimen/custom_button_size_medium_radius">

            <RelativeLayout android:id="@+id/root"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar android:id="@+id/pb"
                    android:layout_width="@dimen/custom_button_size_medium_width"
                    android:layout_height="@dimen/custom_button_size_medium_height"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/custom_button_size_medium_padding"/>

                <ImageView android:id="@+id/image"
                    android:layout_width="@dimen/custom_button_size_medium_width"
                    android:layout_height="@dimen/custom_button_size_medium_height"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/custom_button_size_medium_padding"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
